// OpenCL-ядро для поэлементного сложения двух векторов
// Каждый work-item обрабатывает один элемент массива
__kernel void vector_add(
    __global const float* A,  // Входной массив A (глобальная память)
    __global const float* B,  // Входной массив B (глобальная память)
    __global float* C         // Выходной массив C (глобальная память)
) {
    // Получение глобального индекса текущего work-item
    int id = get_global_id(0);

    // Поэлементное сложение
    C[id] = A[id] + B[id];
}
